{
    "name": "Python GUI Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    // RECUPERADO: Forzamos la apertura de puertos para evitar tener que hacerlo a mano
    "forwardPorts": [
        6080,
        5901
    ],
    "portsAttributes": {
        "6080": {
            "label": "Desktop (Web)",
            "onAutoForward": "notify"
        },
        "5901": {
            "label": "Desktop (VNC)",
            "onAutoForward": "ignore"
        }
    },
    // CORREGIDO: Comando exacto que funcionó + protección contra fallos (|| true)
    "postStartCommand": "picom -b --backend xrender || true",
    "remoteEnv": {
        "DISPLAY": ":1",
        "QT_QPA_PLATFORM": "xcb"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            },
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}